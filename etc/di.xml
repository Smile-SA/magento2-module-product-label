            </argument>
        </arguments>
    </virtualType>

    <virtualType name="Smile\ProductLabel\Model\Api\SearchCriteria\ProductLabelCollectionProcessor" type="Magento\Framework\Api\SearchCriteria\CollectionProcessor">
