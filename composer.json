{
    "name": "smile/module-product-label",
    "type": "magento2-module",
    "description": "Smile - Extension of Magento2 to be able to contribute images associated to product attribute values.",
    "keywords": ["magento2", "product", "label", "image"],
    "authors":[
        {
            "name": "Houda El Rhozlane",
            "email": "houda.elrhozlane@smile.fr"
        },
        {
            "name": "CÃ©dric MAGREZ",
            "email": "cedric.magrez@smile.fr"
        }
    ],
    "license": "OSL-3.0",
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
