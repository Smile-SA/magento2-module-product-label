                <!--</imageUploader>-->
            <!--</formElements>-->
        <!--</field>-->

        <field name="position_category_list" formElement="select" sortOrder="60">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Smile\ProductLabel\Ui\Component\ProductLabel\Source\Location\Options</item>
                <item name="config" xsi:type="array">
                    <item name="filterOptions" xsi:type="boolean">true</item>
                    <item name="multiple" xsi:type="boolean">false</item>
                    <item name="levelsVisibility" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>int</dataType>
                <label translate="true">Image location in thumbnail mode</label>
                <dataScope>position_category_list</dataScope>
                <componentType>field</componentType>
            </settings>
        </field>

        <field name="position_product_view" formElement="select" sortOrder="70">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Smile\ProductLabel\Ui\Component\ProductLabel\Source\Location\Options</item>
                <item name="config" xsi:type="array">
                    <item name="filterOptions" xsi:type="boolean">true</item>
                    <item name="multiple" xsi:type="boolean">false</item>
                    <item name="levelsVisibility" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>int</dataType>
                <label translate="true">Location of the image on product view</label>
                <dataScope>position_product_view</dataScope>
                <componentType>field</componentType>
            </settings>
        </field>

        <field name="display_on" formElement="multiselect" sortOrder="80">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Smile\ProductLabel\Ui\Component\ProductLabel\Source\Location\View</item>
                <item name="config" xsi:type="array">
                    <item name="filterOptions" xsi:type="boolean">true</item>
                    <item name="multiple" xsi:type="boolean">false</item>
                    <item name="levelsVisibility" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>int</dataType>
                <label translate="true">Display on</label>
                <dataScope>display_on</dataScope>
                <componentType>field</componentType>
            </settings>
        </field>

    </fieldset>

</form>
