 *
 * @var $block \Smile\ProductLabel\Block\ProductLabel\ProductLabel
 */
?>
<?php $productLabels = $block->getProductLabels(); ?>

<?php if ($productLabels) : ?>
    <div class="productlabel-wrapper <?= $block->getWrapperClass() ?>" id="smile-productlabels-wrapper">
        <?php foreach($productLabels as $class => $productLabel) :?>
            <?php $classCSS = $productLabel['class']; ?>
            <div class="<?php echo $classCSS; ?>">
                <img src="<?php echo $block->getImageUrl($productLabel['image']); ?>"/>
            </div>
        <?php endforeach; ?>
    </div>
<?php endif; ?>

